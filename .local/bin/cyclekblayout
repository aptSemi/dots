#! /bin/sh
layout="$(setxkbmap -query | awk '/layout/ { print $2 }')"
echo $layout
case $layout in 
	"ro")
	setxkbmap ru
	dunstify "Keyboard layout changed to russian"
	echo f
	;;
	"en")
	setxkbmap ro
	dunstify "Keyboard layout changed to romanian"
	echo h
	;;
	*)
	setxkbmap en
	dunstify "Keyboard layout changed to english"
	echo m
	;;
esac
