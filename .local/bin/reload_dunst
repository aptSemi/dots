#!/usr/bin/env sh
#

        #-lb "${color0}" \
 reload_dunst() {
    pkill dunst
    dunst \
	-frame_width 0 \
        -lb "$(xrdb -query | grep 'background:'| awk '{print $NF}')" \
        -nb "$(xrdb -query | grep 'background:'| awk '{print $NF}')" \
        -cb "$(xrdb -query | grep 'background:'| awk '{print $NF}')" \
        -lf "$(xrdb -query | grep 'color7:'| awk '{print $NF}')" \
        -bf "$(xrdb -query | grep 'color7:'| awk '{print $NF}')" \
        -cf "$(xrdb -query | grep 'color7:'| awk '{print $NF}')" \
        -nf "$(xrdb -query | grep 'color7:'| awk '{print $NF}')" &
}

reload_dunst

