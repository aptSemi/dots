#!/bin/bash
if [[ "$1" = "mount" ]]
then
	mountable=$(lsblk -lp | grep "part $" | awk '{print $1, "(" $4 ")"}')
	[[ "$mountable" = "" ]] && exit 1
	chosen=$(echo "$mountable" | rofi -dmenu | awk '{print $1}')
	[[ "$chosen" = "" ]] && exit 1
	[[ ! -f "/home/$USER/.config/rofi-mount/dirs" ]] && echo "File '~/.config/rofi-mount/dirs' does not exist" && exit 1
	dir=$(cat ~/.config/rofi-mount/dirs | rofi -dmenu)
	[[ "$dir" = ""  ]] && exit 1
	gksu mount $chosen $dir && notify-send "MOUNT" "$chosen is mounted in $dir"
else
	unmountable=$(mount | grep /dev/sd | grep -v sda | awk '{print $1, "(" $3 ")"}')
	[[ "$unmountable" = "" ]] && exit 1
	chosen=$(echo "$unmountable" | rofi -dmenu | awk '{print $1}')
	[[ "$chosen" = "" ]] && exit 1
	gksu umount $chosen && notify-send "UNMOUNT" "Partition $chosen was unmounted"
fi
