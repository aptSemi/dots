#!/bin/sh

# A messy & pathetic script to launch rofi with xrdb colours
# made by addy-fe
#Edited script to make a config by VirginFuhrer

getcolors () {
	FOREGROUND=$(xrdb -query | grep 'foreground:'| awk '{print $NF}')
	BACKGROUND=$(xrdb -query | grep 'background:'| awk '{print $NF}')
	BLACK=$(xrdb -query | grep 'color0:'| awk '{print $NF}')
	RED=$(xrdb -query | grep 'color1:'| awk '{print $NF}')
	GREEN=$(xrdb -query | grep 'color2:'| awk '{print $NF}')
	YELLOW=$(xrdb -query | grep 'color3:'| awk '{print $NF}')
	BLUE=$(xrdb -query | grep 'color13:'| awk '{print $NF}')
	MAGENTA=$(xrdb -query | grep 'color5:'| awk '{print $NF}')
	CYAN=$(xrdb -query | grep 'color6:'| awk '{print $NF}')
	WHITE=$(xrdb -query | grep 'color7:'| awk '{print $NF}')
}

	getcolors

echo "

rofi.modi: run,drun,window 
rofi.hide-scrollbar: true 
rofi.disable-history: true 
rofi.disable_history: true 
rofi.scrollbar-width: 0
rofi.bw: 2
rofi.lines: 12 
rofi.padding: 24 
rofi.width: 20
rofi.location: 0 
rofi.columns: 1
rofi.font: "Iosevka Nerd Font 10" 
rofi.color-enabled: true 
rofi.color-window: "$BACKGROUND,$BLUE,$BACKGROUND" 
rofi.color-normal: "$BACKGROUND,$FOREGROUND,$BACKGROUND,$BACKGROUND, $BLUE" 
rofi.color-active: "$BACKGROUND,$MAGENTA,$BACKGROUND,$BLUE , $BACKGROUND" 
rofi.color-urgent: "$BACKGROUND,$YELLOW,$BACKGROUND,$BACKGROUND,$BLUE"
" > ~/.config/rofi/config
# Theming help
# color window = background, border, separator
# color normal = background, foreground, background-alt, highlight-background, highlight-foreground
# color active = background, foreground, background-alt, highlight-background, highlight-foreground
# color urgent = background, foreground, background-alt, highlight-background, highlight-foreground
